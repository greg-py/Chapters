{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "buildCommand": "npm run build",
        "env": {
          "APP_VERSION": "1.0.0"
        }
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "USE_SOCKET_MODE": "false"
  },
  "git": {
    "deploymentEnabled": false
  },
  "crons": [
    {
      "path": "/api/cron-phase-transition",
      "schedule": "0 * * * *"
    }
  ]
}
